<li class='clearfix record <%= cycle("on", "on-hover") %>'>
  <span class='title'>
    <%= category.title %>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag('application_edit.png'), refinery.edit_news_admin_category_path(category),
                :title => t('.edit') %>
    <%= link_to refinery_icon_tag('delete.png'), refinery.news_admin_category_path(category),
                :class => "cancel confirm-delete",
                :title => t('.delete'),
                :method => :delete,
                :confirm => t('refinery.admin.delete.message', :title => category.title) %>
  </span>
</li>

